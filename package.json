{
  "dependencies": {
    "alpinejs": "3.14.1",
    "htmx.org": "2.0.1",
    "jquery": "3.7.1",
    "tailwindcss": "3.4.5",
    "terser": "5.31.2"
  },
  "scripts": {
    "build:alpine": "cp node_modules/alpinejs/dist/cdn.min.js ./js/alpine.min.js",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js ./js/htmx.min.js",
    "build:jquery": "cp node_modules/jquery/dist/jquery.min.js ./js/jquery.min.js",
    "build": "npm run build:alpine && npm run build:htmx && npm run build:jquery"
  }
}
